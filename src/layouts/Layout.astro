---
import { Github } from "lucide-astro";
import "../styles/global.css";

interface Props {
  title: string;
}

const { title } = Astro.props;
const currentPath = Astro.url.pathname;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Martin Høst Normark - Principal Software Engineer, indie dev, ML enthusiast" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <!-- Fonts -->
    <link rel="preconnect" href="https://api.fontshare.com" crossorigin />
    <link href="https://api.fontshare.com/v2/css?f[]=satoshi@400,500,700&display=swap" rel="stylesheet" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400;500&display=swap" rel="stylesheet" />

    <title>{title}</title>
  </head>

  <body class="grain font-sans">
    <div class="min-h-screen flex flex-col">
      <header class="border-b border-border/50">
        <div class="max-w-2xl mx-auto px-6 py-5 flex justify-between items-center">
          <a
            href="/"
            class="font-mono text-sm tracking-wide text-foreground/70 hover:text-primary transition-colors duration-300"
          >
            martin høst normark
          </a>
          <nav class="flex items-center gap-6">
            <a
              href="/"
              class:list={[
                "text-sm transition-colors duration-300",
                currentPath === "/" ? "text-primary" : "text-muted-foreground hover:text-foreground"
              ]}
            >
              home
            </a>
            <a
              href="/blog"
              class:list={[
                "text-sm transition-colors duration-300",
                currentPath.startsWith("/blog") ? "text-primary" : "text-muted-foreground hover:text-foreground"
              ]}
            >
              blog
            </a>
            <a
              href="https://github.com/martinnormark"
              target="_blank"
              rel="noopener noreferrer"
              class="text-muted-foreground hover:text-foreground transition-colors duration-300"
            >
              <Github class="h-4 w-4" />
              <span class="sr-only">GitHub</span>
            </a>
          </nav>
        </div>
      </header>

      <slot />

      <footer class="border-t border-border/50 mt-auto">
        <div class="max-w-2xl mx-auto px-6 py-8 flex justify-between items-center">
          <p class="text-xs text-muted-foreground font-mono">
            &copy; {new Date().getFullYear()}
          </p>
          <div class="flex items-center gap-4">
            <a
              href="https://x.com/martinhn"
              target="_blank"
              rel="noopener noreferrer"
              class="text-xs text-muted-foreground hover:text-primary transition-colors duration-300 font-mono"
            >
              x.com
            </a>
            <a
              href="https://github.com/martinnormark"
              target="_blank"
              rel="noopener noreferrer"
              class="text-xs text-muted-foreground hover:text-primary transition-colors duration-300 font-mono"
            >
              github
            </a>
            <a
              href="https://linkedin.com/in/martinhn"
              target="_blank"
              rel="noopener noreferrer"
              class="text-xs text-muted-foreground hover:text-primary transition-colors duration-300 font-mono"
            >
              linkedin
            </a>
          </div>
        </div>
      </footer>
    </div>
  </body>
</html>
