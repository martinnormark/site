---
import { Github, Twitter } from "lucide-astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
  </head><a rel="icon" type="image/svg+xml" href="/favicon.svg"></a>
  <meta name="generator" content={Astro.generator} />
  <title>{title}</title>

  <body>
    <div class="min-h-screen flex flex-col">
      <header class="border-b">
        <div
          class="container mx-auto px-4 py-4 flex justify-between items-center"
        >
          <a
            href="/"
            class="text-lg font-semibold hover:text-gray-600 transition-colors"
          >
            DevBlog
          </a>
          <nav class="flex items-center space-x-6">
            <a
              href="/"
              class="text-gray-600 hover:text-gray-900 transition-colors"
            >
              Home
            </a>
            <a
              href="/blog"
              class="text-gray-600 hover:text-gray-900 transition-colors"
            >
              Blog
            </a>
            <a
              href="https://github.com"
              class="text-gray-600 hover:text-gray-900 transition-colors"
            >
              <Github class="h-5 w-5" />
              <span class="sr-only">GitHub</span>
            </a>
          </nav>
        </div>
      </header>

      <slot />

      <footer class="border-t">
        <div
          class="container mx-auto px-4 py-6 flex justify-between items-center"
        >
          <p class="text-sm text-gray-600">
            Â© {new Date().getFullYear()} DevBlog. All rights reserved.
          </p>
          <div class="flex space-x-4">
            <a
              href="https://x.com/martinhn"
              class="text-gray-600 hover:text-gray-900 transition-colors"
            >
              <Twitter class="h-5 w-5" />
              <span class="sr-only">Twitter</span>
            </a>
            <a
              href="https://github.com/martinnormark"
              class="text-gray-600 hover:text-gray-900 transition-colors"
            >
              <Github class="h-5 w-5" />
              <span class="sr-only">GitHub</span>
            </a>
          </div>
        </div>
      </footer>
    </div>
  </body>


</html>
