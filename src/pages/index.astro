---
import Layout from "../layouts/Layout.astro";
import { ArrowUpRight } from "lucide-astro";
---

<Layout title="Martin Høst Normark">
  <main class="flex-grow max-w-2xl mx-auto px-6 py-16 md:py-24">
    <div class="animate-fade-in-up">
      <div class="flex items-center gap-5 mb-10">
        <img
          src="/avatar.jpeg"
          alt="Martin Høst Normark"
          class="w-16 h-16 rounded-full ring-2 ring-border"
        />
        <div>
          <h1 class="text-xl font-bold tracking-tight">Martin Høst Normark</h1>
          <p class="text-sm text-muted-foreground font-mono">engineering the uncertain</p>
        </div>
      </div>
    </div>

    <div class="animate-fade-in-up delay-1 space-y-4 mb-12">
      <p class="text-foreground/80 leading-relaxed">
        Principal Software Engineer at The LEGO Group. I build scalable systems,
        tinker with machine learning, and bring statistical rigor to complex problems.
        Generalist at heart — from cloud architecture to data science to UX.
      </p>
      <p class="text-foreground/80 leading-relaxed">
        Exploring the space where software craft meets uncertainty.
      </p>
    </div>

    <div class="animate-fade-in-up delay-2 mb-14">
      <p class="text-xs font-mono text-muted-foreground uppercase tracking-widest mb-4">Currently into</p>
      <div class="flex flex-wrap gap-2">
        {[
          "ML/AI", "Cloud Architecture", "Full-Stack", "Data Science",
          "Probabilistic Thinking", "API Design", "Prototyping"
        ].map(skill => (
          <span class="text-xs font-mono px-3 py-1.5 rounded-full border border-border text-muted-foreground hover:text-primary hover:border-primary/40 transition-colors duration-300 cursor-default">
            {skill}
          </span>
        ))}
      </div>
    </div>

    <div class="animate-fade-in-up delay-3 space-y-3">
      <p class="text-xs font-mono text-muted-foreground uppercase tracking-widest mb-4">Elsewhere</p>
      <div class="flex flex-col gap-2">
        <a
          href="https://github.com/martinnormark"
          target="_blank"
          rel="noopener noreferrer"
          class="group flex items-center gap-2 text-sm text-foreground/70 hover:text-primary transition-colors duration-300"
        >
          <span>GitHub</span>
          <ArrowUpRight class="h-3 w-3 opacity-0 -translate-y-0.5 translate-x-0.5 group-hover:opacity-100 group-hover:translate-y-0 group-hover:translate-x-0 transition-all duration-300" />
        </a>
        <a
          href="https://x.com/martinhn"
          target="_blank"
          rel="noopener noreferrer"
          class="group flex items-center gap-2 text-sm text-foreground/70 hover:text-primary transition-colors duration-300"
        >
          <span>X / Twitter</span>
          <ArrowUpRight class="h-3 w-3 opacity-0 -translate-y-0.5 translate-x-0.5 group-hover:opacity-100 group-hover:translate-y-0 group-hover:translate-x-0 transition-all duration-300" />
        </a>
        <a
          href="https://linkedin.com/in/martinhn"
          target="_blank"
          rel="noopener noreferrer"
          class="group flex items-center gap-2 text-sm text-foreground/70 hover:text-primary transition-colors duration-300"
        >
          <span>LinkedIn</span>
          <ArrowUpRight class="h-3 w-3 opacity-0 -translate-y-0.5 translate-x-0.5 group-hover:opacity-100 group-hover:translate-y-0 group-hover:translate-x-0 transition-all duration-300" />
        </a>
        <a
          href="/blog"
          class="group flex items-center gap-2 text-sm text-primary hover:text-primary/80 transition-colors duration-300 mt-2"
        >
          <span>Read the blog &rarr;</span>
        </a>
      </div>
    </div>
  </main>
</Layout>
